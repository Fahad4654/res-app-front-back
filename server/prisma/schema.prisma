generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Decimal @db.Decimal(10, 2)
  category    String?
  image       String?
  createdAt   DateTime @default(now())
  reviews     Review[] @relation("MenuItemReviews")
  @@map("menu_items")
}

model Order {
  id       Int      @id @default(autoincrement())
  items    Json
  customer Json
  total    Decimal  @db.Decimal(10, 2)
  status           String   @default("pending")
  date             DateTime @default(now())
  estimatedReadyAt DateTime?
  userId           Int?
  user     User?    @relation(fields: [userId], references: [id])
  
  kitchenStaffId  Int?
  kitchenStaff    User?    @relation("KitchenOrders", fields: [kitchenStaffId], references: [id])
  
  deliveryStaffId Int?
  deliveryStaff   User?    @relation("DeliveryOrders", fields: [deliveryStaffId], references: [id])
  
  isDeletedByCustomer Boolean @default(false)
  review              Review?
  @@map("orders")
}

enum Role {
  CUSTOMER
  ADMIN
  KITCHEN_STAFF
  DELIVERY_STAFF
  CUSTOMER_SUPPORT
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name           String?
  phoneNo        String?
  address        String?
  profilePicture String?
  role           Role     @default(CUSTOMER)
  createdAt      DateTime @default(now())
  orders          Order[]
  ordersPrepared  Order[]  @relation("KitchenOrders")
  ordersDelivered Order[]  @relation("DeliveryOrders")
  reviews         Review[]
  refreshTokens   RefreshToken[]
  @@map("users")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  @@map("categories")
}

model Permission {
  id        Int      @id @default(autoincrement())
  role      Role
  resource  String   // e.g., "orders", "menu", "users", "categories"
  action    String   // e.g., "view", "create", "update", "delete"
  allowed   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([role, resource, action])
  @@map("permissions")
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int      @default(5)
  comment   String?
  createdAt DateTime @default(now())
  
  orderId   Int      @unique
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  isAccepted Boolean @default(false)
  taggedItems MenuItem[] @relation("MenuItemReviews")

  @@map("reviews")
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}
